{
  "name": "Weather With Me",
  "version": "1.0",
  "description": "Provide you up-to-date weather information.",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "geolocation"
  ],

  "options_ui": {
    "page": "option.html",
    "open_in_tab": false
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/images16.png",
      "32": "images/images32.png",
      "48": "images/images48.png",
      "128": "images/images128.png"
    }
  },
  "icons": {
    "16": "images/images16.png",
    "32": "images/images32.png",
    "48": "images/images48.png",
    "128": "images/images128.png"
  },
  "manifest_version": 2
}
